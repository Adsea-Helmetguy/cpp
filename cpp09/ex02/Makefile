NAME = PmergeMe

CXX = c++
CXXFLAGS = -g -Wall -Werror -Wextra -std=c++98 -MMD

SRC_DIR = .
INC_DIR = .
OBJ_DIR = obj

# ************************************************************************** */
#       SOURCE (#List of SOURCE(SRC) files)                                  */
# ************************************************************************** */
SRCS = main.cpp \
	mainpend_vector/PmergeMe.cpp \
	mainpend_vector/split_pairs.cpp \
	mainpend_vector/binary_leftover.cpp \
	print_values/print_mainpend.cpp \
	helper/helper_general.cpp \
	helper/helper_vector.cpp \
	helper/helper_deque.cpp \
	mainpend_deque/alt.cpp
			


# ************************************************************************** */
#       FILE_LOCATION && D.Files                                             */
# ************************************************************************** */

# Add source path prefix (SRC_DIR = .)
SRC_FILE_PATHS = $(addprefix $(SRC_DIR)/, $(SRCS))

# Create matching object paths in obj/ while preserving folder structure
OBJ_FILE_PATHS = $(addprefix $(OBJ_DIR)/, $(SRCS:.cpp=.o))

# "D.FILES"-->Dependency files (generated by -MMD) *1)
DEPS = $(OBJ_FILE_PATHS:.o=.d)

# Create all directories needed under obj/
DIRS = $(sort $(dir $(OBJ_FILE_PATHS)))

# ************************************************************************** */
#	RULES                                                                */
# ************************************************************************** */
all: $(NAME) 

$(NAME): $(OBJ_FILE_PATHS)
	$(CXX) $(CXXFLAGS) $(OBJ_FILE_PATHS) -o $(NAME)

# Compile .cpp to .o in obj/, create subdirs as needed
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.cpp
	@mkdir -p $(dir $@)
	$(CXX) $(CXXFLAGS) -I $(INC_DIR) -c $< -o $@

clean: 
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

re: fclean all

-include $(DEPS)

PHONY: all clean fclean re




#*1) DEPS = $(OBJ_FILE_PATHS:.o=.d)
#It's not part of "re", not part of any rule's recipe
# it gets processed immediately when Make reads the Makefile
# Bascially, this line can be used ANYWHERE WHICHEVER LINE WHEHUEHE











